#!/bin/sh
#
# ifup hook script to enable port forwarding

case "$IFACE" in
  {{posm_netif}}) exit 0 ;;
esac

iptables -t nat -C POSTROUTING -o $IFACE -j MASQUERADE || iptables -t nat -A POSTROUTING -o $IFACE -j MASQUERADE
iptables -C FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT || iptables -A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
iptables -C FORWARD -i {{posm_netif}} -o $IFACE -j ACCEPT || iptables -A FORWARD -i {{posm_netif}} -o $IFACE -j ACCEPT
